{
  "name": "autospace",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "scripts": {
    "format": "prettier \"{apps, libs}/**/*.{ts,tsx,js,json}\" --ignore-path .gitignore",
    "format:check": "yarn format --check",
    "format:write": "yarn format --write",
    "tsc": "yarn nx run-many -t run tsc",
    "lint": "yarn nx run-many -t run lint",
    "build": "yarn nx run-many -t run build",
    "validate": "yarn format:write && yarn tsc && yarn lint && yarn build",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "prettier": "^3.4.2",
    "typescript": "^5.8.2",
    "husky": "^8.0.0",
    "nx": "20.7.1"
  },
  "dependencies": {
    "sample-lib": "link:apps/libs/sample-lib"
  }
}
